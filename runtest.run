#!/bin/bash

# Test .run file

echo "Starting the test script..."

# Check if the script is running with root privileges
if [ "$EUID" -ne 0 ]; then
  echo "Please run as root"
  exit 1
fi

# Example of creating a test file
echo "Creating a test file..."
touch /tmp/test_run_file.txt
echo "This is a test file created by the .run script." > /tmp/test_run_file.txt

echo "Test file created at /tmp/test_run_file.txt"
ls -l /tmp/test_run_file.txt

echo "Test script completed successfully!"
exit 0
